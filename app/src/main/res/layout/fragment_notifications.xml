<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="column"
            app:justifyContent="center">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="28dp"
                    android:layout_height="31dp"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:contentDescription="Voltar"
                    android:focusable="true"
                    android:src="@drawable/baseline_arrow_back_ios_24" />
            </com.google.android.flexbox.FlexboxLayout>


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/no_content_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:visibility="gone"
                app:alignContent="center"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="center"
                app:layout_constraintTop_toBottomOf="@+id/txtTarefaTitle"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nada por aqui"
                    android:textColor="#D9D9D9"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_content_tasks"></ImageView>
            </com.google.android.flexbox.FlexboxLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:ignore="UnknownIdInLayout"
                tools:listitem="@layout/notification_view" />


        </com.google.android.flexbox.FlexboxLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
