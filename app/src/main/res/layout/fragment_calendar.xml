<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.Calendar.CalendarFragment">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:mcv_firstDayOfWeek="monday"
            app:mcv_selectionColor="@color/purple_200"
            app:mcv_showOtherDates="all"
            app:mcv_tileHeight="50dp"
            app:mcv_tileWidth="50dp"
            app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/calendar_section_shape"
            android:padding="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarView">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:justifyContent="space_between">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoje"
                    android:textColor="#370963"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Você estará presente hoje?"
                    android:textColor="#370963"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:justifyContent="space_around">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/presenceSelect"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/border_normal"
                        android:text="Estarei presente"
                        android:textAllCaps="false"
                        android:textColor="#25173A"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/absenceSelect"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/border_normal"
                        android:text="Estarei ausente"
                        android:textAllCaps="false"
                        android:textColor="#25173A"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </com.google.android.flexbox.FlexboxLayout>

                <TextView
                    android:id="@+id/txtComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Escreva uma breve justificativa:"
                    android:textColor="#370963"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextArea"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/background_input"
                    android:gravity="top|start"
                    android:hint="Digite aqui..."
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:padding="10dp"
                    android:scrollbars="vertical" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/file_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enviar arquivo"
                        android:textColor="#25173A" />

                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:justifyContent="flex_end">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sendAbsenceButton"
                        android:layout_width="147dp"
                        android:layout_height="39dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/anekodia"
                        android:text="ENVIAR"
                        android:textColor="#25173A"
                        android:textStyle="bold" />

                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
