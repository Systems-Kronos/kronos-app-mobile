<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadingOverlayContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RestrictArea.RestrictLogin">

    <!-- CONTEÚDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTittleTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="ÁREA RESTRITA"
            android:textColor="#1A1818"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cpfLabel"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/anekodia"
            android:text="E-mail"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txtEmail"
            app:layout_constraintStart_toStartOf="@+id/txtEmail" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="306dp"
            android:layout_height="54dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="12dp"
            android:hint="Digite o e-mail"
            android:inputType="text"
            android:paddingStart="18dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.323" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/anekodia"
            android:text="Senha"
            android:textColor="#070000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/txtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="304dp"
            android:layout_height="56dp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/padlock_icon"
            android:drawablePadding="12dp"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:paddingStart="18dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLabel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="147dp"
            android:layout_height="39dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/anekodia"
            android:text="ENTRAR"
            android:textColor="#25173A"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="448dp"
            android:layout_height="446dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="372dp"
            android:src="@drawable/img_gear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/purple_500" />

    </FrameLayout>

</FrameLayout>
